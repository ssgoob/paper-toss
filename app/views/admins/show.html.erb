<div class="container">
<div class="row">
<div class="col-xs-6 col-sm-6 col-md-6">
  <h3>Update Company Profile</h3>
  <%= render :partial => '/companies/form', company: @company %>
</div>
<div class="col-xs-6 col-sm-6 col-md-6">
  <div class="row">
  <h3>Set a Pair</h3>
 <%= form_for @conversation, url: conversations_path, method: :post do |f| %>
  <%= f.collection_select(:sender_id, @coworkers, :id, :full_name, {:prompt => "Selection #1"}) %>
  <%= f.collection_select(:recipient_id, @coworkers, :id, :full_name, {:prompt => "Selection #2"}) %>
  <%= f.submit "Submit Pair" %>
<% end %>
    <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>
</div>
<div class="row">
<h3>Add or Update Questions</h3>
</div>

</div>
</div>
</div>